<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DragTopLayout">

        <!--Set the collapse panel offset-->
        <attr name="dtlCollapseOffset" format="dimension" />

        <!--Set enable drag over.The default value is true.-->
        <attr name="dtlOverDrag" format="boolean" />

        <!--Open the top view after the drag layout is created. The default value is false.-->
        <attr name="dtlOpen" format="boolean" />

        <!-- The id of the top view (which will be dragged) -->
        <attr name="dtlTopView" format="reference" />

        <!-- The content view which will be dragged together with "dtlTopView" -->
        <attr name="dtlDragContentView" format="reference" />

        <!-- True the top view can be dragged -->
        <attr name="dtlCaptureTop" format="boolean" />

    </declare-styleable>

    -
    <declare-styleable name="SocialViewStyle">

        <attr name="socialViewStyle" format="reference" />

    </declare-styleable>


    -
    <declare-styleable name="SocialView">

        <!-- Determine whether each feature should be turned on/off.Default is all true. -->


        -
        <attr name="socialFlags">

            <flag name="hashtag" value="1" />

            <flag name="mention" value="2" />
            <flag name="email" value="3" />

            <flag name="hyperlink" value="4" />

        </attr>

        <!-- Color of each feature.If particular feature is not enabled, this value will be ignored.Default is color accent of current theme. -->


        <attr name="hashtagColor" format="color" />

        <attr name="mentionColor" format="color" />
        <attr name="emailColor" format="color" />

        <attr name="hyperlinkColor" format="color" />

    </declare-styleable>

</resources>